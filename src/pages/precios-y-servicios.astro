	@media (min-width: 1120px) {
		.services-grid {
			grid-template-columns: repeat(3, 1fr);
		}
	}
	@media (min-width: 768px) and (max-width: 1119px) {
		.services-grid {
			grid-template-columns: repeat(2, 1fr);
		}
		.services-grid > :nth-child(3) {
			grid-column: 1 / 2;
			justify-self: center;
		}
	}
</style>
				<!-- Desarrollo Web & Portafolio -->
