	{ codigo: 'COP', nombre: 'Colombia', simbolo: '' },
	{ codigo: 'MXN', nombre: 'México', simbolo: '$' },
	{ codigo: 'EUR', nombre: 'Europa', simbolo: '€' },
	{ codigo: 'USD', nombre: 'USA / Universal', simbolo: '$' }
];

