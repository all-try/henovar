<script>
	document.addEventListener('DOMContentLoaded', function() {
		const detailsElements = document.querySelectorAll('details');
		
		detailsElements.forEach(details => {
			const content = details.querySelector('.animate-slideDown, .animate-slideUp');
			
			if (content) {
				details.addEventListener('toggle', function() {
					if (details.open) {
						content.classList.remove('animate-slideUp');
						content.classList.add('animate-slideDown');
					} else {
						content.classList.remove('animate-slideDown');
						content.classList.add('animate-slideUp');
					}
				});
			}
		});
		
		// Currency switcher functionality
		const currencyButtons = document.querySelectorAll('.currency-btn');
		
		const precios = {
			desarrolloWeb: {
				cop: { actual: 299000, anterior: 969000 },
				mxn: { actual: 1450, anterior: 4700 },
				eur: { actual: 65, anterior: 210 },
				usd: { actual: 70, anterior: 230 }
			},
			tiendaOnline: {
				cop: { actual: 659000, anterior: 1340000 },
				mxn: { actual: 3200, anterior: 6500 },
				eur: { actual: 145, anterior: 295 },
				usd: { actual: 155, anterior: 315 }
			},
			remodelacion: {
				cop: { actual: 399000, anterior: 1200000 },
				mxn: { actual: 2000, anterior: 6000 },
				eur: { actual: 100, anterior: 300 },
				usd: { actual: 105, anterior: 320 }
			}
		};
		
		const divisas = {
			cop: { simbolo: 'COP' },
			mxn: { simbolo: '$' },
			eur: { simbolo: '€' },
			usd: { simbolo: '$' }
		};
		
		currencyButtons.forEach((button: Element) => {
			button.addEventListener('click', function(this: HTMLButtonElement) {
				const currency = this.dataset.currency;
				if (!currency) return;
				const currencyKey = currency as keyof typeof divisas;
				const symbol = divisas[currencyKey].simbolo;
				
				// Actualizar estilos de botones
				currencyButtons.forEach(btn => {
					btn.className = 'currency-btn px-4 py-2 rounded-lg font-medium transition-all duration-200 cursor-pointer bg-gray-800/50 text-gray-300 hover:bg-gray-700';
				});
				this.className = 'currency-btn px-4 py-2 rounded-lg font-medium transition-all duration-200 cursor-pointer bg-blue-900 text-white';
				
				// Actualizar precios
				updatePrice('desarrollo', currencyKey, symbol);
				updatePrice('tienda', currencyKey, symbol);
				updatePrice('remodelacion', currencyKey, symbol);
			});
		});
		
		function updatePrice(service: string, currency: keyof typeof precios.desarrolloWeb, symbol: string) {
			let serviceKey: keyof typeof precios;
			switch(service) {
				case 'desarrollo':
					serviceKey = 'desarrolloWeb';
					break;
				case 'tienda':
					serviceKey = 'tiendaOnline';
					break;
				case 'remodelacion':
					serviceKey = 'remodelacion';
					break;
				default:
					return;
			}
			
			const priceElement = document.querySelector(`[data-service="${service}"] [data-price="main"]`);
			const previousPriceElement = document.querySelector(`[data-service="${service}"] .text-slate-500`);
			const priceLabelElement = document.querySelector(`[data-service="${service}"] .text-slate-400.text-sm.font-medium.mb-2`);
			
			if (priceElement && serviceKey) {
				const actualPrice = precios[serviceKey][currency].actual.toLocaleString();
				if (symbol === 'COP') {
					priceElement.innerHTML = `${actualPrice}`;
				} else if (symbol === '€') {
					priceElement.innerHTML = `${actualPrice} <span class="text-5xl font-normal">${symbol}</span>`;
				} else {
					priceElement.innerHTML = `<span class="text-5xl font-normal">${symbol}</span>${actualPrice}`;
				}
			}
			
			if (previousPriceElement && serviceKey) {
				const anteriorPrice = precios[serviceKey][currency].anterior;
				if (anteriorPrice) {
					if (symbol === '€') {
						previousPriceElement.innerHTML = `ANTES ${anteriorPrice.toLocaleString()}${symbol}`;
					} else {
						previousPriceElement.innerHTML = `ANTES ${symbol}${anteriorPrice.toLocaleString()}`;
					}
				}
			}
			
			if (priceLabelElement) {
				(priceLabelElement as HTMLElement).style.display = 'none';
			}
		}
	});
</script>