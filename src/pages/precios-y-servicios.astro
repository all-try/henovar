<Layout title="Servicios - Henovar">
	<div class="bg-page-dark">
	<PageBanner
		titulo="Servicios y precios Diseñados para ti"
		parrafo="Transformamos ideas en **experiencias digitales exitosas**. Desde sitios web profesionales hasta tiendas online completas."
		badge="Servicios"
		highlight="Diseñados"
		imagenFondo={pageTopBanner}
	/>

		<!-- Toggle de Divisas -->
		<section class="no-y-section no-y-section-padding">
			<div class="max-w-6xl mx-auto pt-20">
				<div class="text-center mb-8">
					<h3 class="text-white text-lg font-semibold mb-4">Elige tu moneda</h3>
					<div class="flex flex-wrap justify-center gap-3">
						{divisas.map((divisa, index) => (
							<button 
								class={`currency-btn px-4 py-2 rounded-lg font-medium transition-all duration-200 cursor-pointer ${
									index === 0 ? 'bg-blue-900 text-white' : 'bg-gray-800/50 text-gray-300 hover:bg-gray-700'
								}`}
								data-currency={divisa.codigo.toLowerCase()}
								data-symbol={divisa.simbolo}
							>
								{divisa.codigo} ({divisa.nombre})
							</button>
						))}
