---
import Layout from '../layouts/Layout.astro';
import Titulo from '../components/Titulo.astro';
import Parrafo from '../components/Parrafo.astro';
import Badge from '../components/Badge.astro';
import BotonPrimario from '../components/BotonPrimario.astro';
import FiveStars from '../components/icons/FiveStars.astro';

// Datos de testimonios
const testimonios = [
	{
		id: 1,
		nombre: "María González",
		cargo: "CEO",
		empresa: "TechStart Solutions",
		testimonio: "El equipo de Henovar transformó completamente nuestra presencia digital. Su enfoque profesional y atención al detalle superaron nuestras expectativas.",
		rating: 5,
		avatar: "/images/avatar-1.jpg",
		size: "large" // Para bento grid
	},
	{
		id: 2,
		nombre: "Carlos Rodríguez",
		cargo: "Director de Marketing",
		empresa: "InnovateCorp",
		testimonio: "Increíble trabajo en nuestra plataforma e-commerce. Las ventas aumentaron un 300% después del lanzamiento.",
		rating: 5,
		avatar: "/images/avatar-2.jpg",
		size: "medium"
	},
	{
		id: 3,
		nombre: "Ana Martínez",
		cargo: "Fundadora",
		empresa: "EduLearn",
		testimonio: "La plataforma educativa que desarrollaron es intuitiva y potente. Nuestros estudiantes están encantados.",
		rating: 5,
		avatar: "/images/avatar-3.jpg",
		size: "medium"
	},
	{
		id: 4,
		nombre: "Roberto Silva",
		cargo: "CTO",
		empresa: "DataFlow Systems",
		testimonio: "Excelente arquitectura técnica y código limpio. El sistema es escalable y fácil de mantener.",
		rating: 5,
		avatar: "/images/avatar-4.jpg",
		size: "small"
	},
	{
		id: 5,
		nombre: "Laura Fernández",
		cargo: "Product Manager",
		empresa: "FinTech Pro",
		testimonio: "Su experiencia en desarrollo de aplicaciones financieras es excepcional. Cumplieron todos los estándares de seguridad.",
		rating: 5,
		avatar: "/images/avatar-5.jpg",
		size: "small"
	},
	{
		id: 6,
		nombre: "Diego Morales",
		cargo: "Gerente General",
		empresa: "RetailMax",
		testimonio: "La aplicación móvil que desarrollaron ha revolucionado nuestra operación. Interface perfecta y rendimiento excelente.",
		rating: 5,
		avatar: "/images/avatar-6.jpg",
		size: "large"
	}
];
---

<Layout 
	title="Testimonios - Henovar"
	description="Lee los testimonios de nuestros clientes satisfechos. Descubre por qué confían en Henovar para sus proyectos digitales."
	keywords="testimonios clientes, opiniones, casos de éxito, reseñas, satisfacción cliente"
>
	<!-- Hero Section -->
	<section class="section section-padding">
		<div class="max-w-7xl mx-auto text-center">
			<Badge class="mb-6">Testimonios</Badge>
			<Titulo level={1} highlight="clientes" class="mb-6">
				Lo que dicen nuestros clientes
			</Titulo>
			<Parrafo class="max-w-3xl mx-auto mb-8">
				La **satisfacción de nuestros clientes** es nuestra mayor recompensa. Descubre sus experiencias trabajando con nosotros.
			</Parrafo>
		</div>
	</section>

	<!-- Testimonios con Bento Grid -->
	<div class="container-bg-dark">
		<section class="section section-padding">
			<div class="max-w-6xl mx-auto">
				<!-- Layout Flexbox: 2-1-3 para Desktop, Stack para móvil -->
				<div class="testimonials-container">
					<!-- Primera fila: 2 cards -->
					<div class="testimonials-row row-2">
						{testimonios.slice(0, 2).map((testimonio) => (
							<div class="testimonial-card">
								<div class="testimonial-content">
									<div class="testimonial-text">
										<p>"{testimonio.testimonio}"</p>
									</div>
									<div class="testimonial-footer">
										<div class="testimonial-avatar">
											<div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-semibold text-lg">
												{testimonio.nombre.split(' ').map(n => n[0]).join('')}
											</div>
										</div>
										<div class="testimonial-info">
											<h5 class="testimonial-name">{testimonio.nombre}</h5>
											<p class="testimonial-role">{testimonio.cargo}, {testimonio.empresa}</p>
											<div class="testimonial-rating">
												<FiveStars size="sm" />
											</div>
										</div>
									</div>
								</div>
							</div>
						))}
					</div>

					<!-- Segunda fila: 1 card largo con imagen -->
					<div class="testimonials-row row-1">
						{testimonios.slice(2, 3).map((testimonio) => (
							<div class="testimonial-card testimonial-wide">
								<div class="testimonial-content-wide">
									<div class="testimonial-text-section">
										<div class="testimonial-text">
											<p>"{testimonio.testimonio}"</p>
										</div>
										<div class="testimonial-footer-wide">
											<div class="testimonial-author-info">
												<div class="testimonial-avatar">
													<div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-semibold text-lg">
														{testimonio.nombre.split(' ').map(n => n[0]).join('')}
													</div>
												</div>
												<div class="testimonial-info">
												<h5 class="testimonial-name">{testimonio.nombre}</h5>
												<p class="testimonial-role">{testimonio.cargo}, {testimonio.empresa}</p>
												<div class="testimonial-rating">
													<FiveStars size="sm" />
												</div>
											</div>
										</div>
										</div>
									</div>
									<div class="testimonial-image">
										<img src="/img/testimonial-image.png" alt="Testimonio" class="w-full h-auto max-h-80 lg:max-h-96 rounded-lg object-cover" />
									</div>
								</div>
							</div>
						))}
					</div>

					<!-- Tercera fila: 3 cards -->
					<div class="testimonials-row row-3">
						{testimonios.slice(3, 6).map((testimonio) => (
							<div class="testimonial-card">
								<div class="testimonial-content">
									<div class="testimonial-text">
										<p>"{testimonio.testimonio}"</p>
									</div>
									<div class="testimonial-footer">
										<div class="testimonial-avatar">
											<div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-semibold text-lg">
												{testimonio.nombre.split(' ').map(n => n[0]).join('')}
											</div>
										</div>
										<div class="testimonial-info">
											<h5 class="testimonial-name">{testimonio.nombre}</h5>
											<p class="testimonial-role">{testimonio.cargo}, {testimonio.empresa}</p>
											<div class="testimonial-rating">
												<FiveStars size="sm" />
											</div>
										</div>
									</div>	
								</div>
							</div>
						))}
					</div>
				</div>
			</div>
		</section>
	</div>

	<!-- CTA Section -->
	<section class="section section-padding container-bg-darker">
		<div class="max-w-4xl mx-auto text-center">
			<Titulo level={2} highlight="experiencia" class="mb-6">
				¿Quieres vivir la misma experiencia?
			</Titulo>
			<Parrafo class="mb-8">
				Únete a nuestros **clientes satisfechos** y descubre cómo podemos transformar tu proyecto digital.
			</Parrafo>
			<BotonPrimario href="/contacto">Comenzar Proyecto</BotonPrimario>
		</div>
	</section>
</Layout>

<style>
	/* Contenedor principal con Grid */
	.testimonials-container {
		display: grid;
		gap: 2rem;
		grid-template-columns: 1fr;
	}

	/* Filas de testimonios */
	.testimonials-row {
		display: grid;
		gap: 2rem;
	}

	/* Desktop Layout con Grid */
	@media (min-width: 1024px) {
		.row-2 {
			grid-template-columns: 1fr 1fr;
		}

		.row-1 {
			grid-template-columns: 1fr;
		}

		.row-3 {
			grid-template-columns: repeat(3, 1fr);
		}
	}

	/* Mobile: Stack vertical */
	@media (max-width: 1023px) {
		.testimonials-container {
			gap: 1rem;
		}

		.testimonials-row {
			grid-template-columns: 1fr;
			gap: 1rem;
		}

		.testimonial-card {
			min-height: 200px;
		}
	}

	/* Estilos de las tarjetas */
	.testimonial-card {
		background: rgba(0, 0, 0, 0.4);
		border-radius: 1rem;
		padding: 2rem;
		position: relative;
		overflow: hidden;
		backdrop-filter: blur(10px);
	}

	.testimonial-content {
		position: relative;
		z-index: 1;
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}

	.testimonial-footer {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-top: 1.5rem;
	}

	.testimonial-avatar {
		flex-shrink: 0;
	}

	.testimonial-info {
		flex: 1;
		min-width: 0;
	}

	.testimonial-name {
		color: white;
		font-size: 1.125rem;
		font-weight: 600;
		margin: 0 0 0.25rem 0;
		text-align: left;
	}

	.testimonial-role {
		color: #9CA3AF;
		font-size: 0.875rem;
		margin: 0 0 0.5rem 0;
		text-align: left;
		line-height: 1.4;
	}

	.testimonial-rating {
		display: flex;
		align-items: center;
		justify-content: flex-start;
	}

	.testimonial-text {
		flex: 1;
	}

	.testimonial-text p {
		color: #E5E7EB;
		line-height: 1.6;
		margin: 0;
		font-size: 1rem;
		text-align: left;
		font-style: italic;
	}

	/* Estilos especiales para card ancho */
	.testimonial-content-wide {
		display: grid;
		gap: 2rem;
		height: 100%;
	}

	.testimonial-text-section {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}

	.testimonial-footer-wide {
		display: flex;
		align-items: center;
		justify-content: space-between;
		margin-top: 1.5rem;
	}

	.testimonial-author-info {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.testimonial-rating-desktop {
		display: none;
	}

	.testimonial-rating-mobile {
		display: block;
		margin-top: 0.5rem;
	}

	.testimonial-image {
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.testimonial-wide .testimonial-text p {
		font-size: 1.125rem;
		line-height: 1.7;
	}

	/* Desktop layout para card ancho */
	@media (min-width: 1024px) {
		.testimonial-content-wide {
			grid-template-columns: 2fr 1fr;
			align-items: center;
		}

		.testimonial-rating-desktop {
			display: block;
		}

		.testimonial-rating-mobile {
			display: none;
		}


	}

	/* Mobile layout para card ancho */
	@media (max-width: 1023px) {
		.testimonial-content-wide {
			grid-template-columns: 1fr;
			grid-template-rows: auto auto;
		}


	}

	/* Responsive adjustments */
	@media (min-width: 1024px) {
		.testimonial-wide .testimonial-name {
			font-size: 1.25rem;
		}

		.testimonial-wide .testimonial-role {
			font-size: 1rem;
		}

		.row-3 .testimonial-card .testimonial-text p {
			font-size: 0.875rem;
		}

		.row-3 .testimonial-card .testimonial-name {
			font-size: 1rem;
		}

		.row-3 .testimonial-card .testimonial-role {
			font-size: 0.75rem;
		}
	}
</style>