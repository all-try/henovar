    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
    line-height: 1.7;
    color: #333;
  }

  .section {
    margin-bottom: 3rem;
  }

  .section h2 {
    font-size: 2rem;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 1.5rem;
    line-height: 1.3;
  }

  .section h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #2c3e50;
    margin: 2rem 0 1rem 0;
    line-height: 1.4;
  }

  .section h4 {
    font-size: 1.2rem;
    font-weight: 600;
    color: #34495e;
    margin: 1.5rem 0 0.8rem 0;
  }

  .section p {
    margin-bottom: 1.2rem;
    font-size: 1.1rem;
  }

  .section ul, .section ol {
    margin: 1rem 0 1.5rem 0;
    padding-left: 1.5rem;
  }

  .section li {
