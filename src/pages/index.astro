---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import BlogBadge from '../components/BlogBadge.astro';
import Titulo from '../components/Titulo.astro';
import Parrafo from '../components/Parrafo.astro';
import BotonPrimario from '../components/BotonPrimario.astro';
import BotonSecundario from '../components/BotonSecundario.astro';
import IndexFeatureCard from '../components/IndexFeatureCard.astro';
import IndexProyectos from '../components/IndexProyectos.astro';
import IndexBlog from '../components/IndexBlog.astro';
import FiveStars from '../components/icons/FiveStars.astro';
import IndexTestimonio from '../components/IndexTestimonio.astro';
import FAQ from '../components/FAQ.astro';
import ProjectModal from '../components/ProjectModal.astro';
import { Image } from 'astro:assets';
import { blogPosts, getFeaturedPosts } from '../data/blogs';
import { projects } from '../data/projects';
import { getOptimizedImage } from '../utils/imageMap';
import ModalScript from '../components/ModalScript.astro';

// Obtener blogs destacados primero, luego completar con regulares hasta máximo 3
const featuredPosts = getFeaturedPosts();
const regularPosts = blogPosts.filter(post => !post.featured);
const selectedBlogs = [...featuredPosts, ...regularPosts].slice(0, 3);

// Obtener los primeros 3 proyectos del array
const selectedProjects = projects.slice(0, 3);

// Mapeo de rutas originales de imágenes para el modal
const originalImagePaths: { [key: string]: string } = {
  "Portafolio": "/img/projects/Asesorias.png",
  "Onsite": "/img/projects/Onsite.png",
  "Opsify": "/img/projects/Opsify.png",
  "Pulsara": "/img/projects/Pulsara.png",
  "Task.oi": "/img/projects/Taskoi.png",
  "Tokenix": "/img/projects/Tokenix.png",
  "Flovo": "/img/projects/Flovo.png"
};
---

<Layout 
	title="Henovar - Soluciones Digitales Innovadoras"
	description="Transformamos ideas en soluciones digitales innovadoras. Especialistas en desarrollo web, consultoría tecnológica y proyectos digitales."
	keywords="desarrollo web, consultoría tecnológica, soluciones digitales, programación, diseño web, proyectos digitales"
>
	<div class="bg-[url('/img/bg/large-bg.png')] bg-cover bg-top bg-no-repeat">
	<!-- Hero Section -->
	<section class="pb-7 px-3 lg:px-7 pt-25 lg:pt-0">
		<div class="pb-5 lg:pb-12 pt-5 lg:pt-40 px-5 lg:px-5 max-w-full rounded-2xl lg:rounded-t-none mx-auto bg-[url('/img/bg/banner.webp')] bg-cover bg-top bg-no-repeat">
		<div class="w-full">
			<div class="max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
				<!-- Contenido izquierda -->
				<div>
					<Badge class="mb-4">Hecho para tu Marca</Badge>
					<Titulo level={1} highlight="venden" alignMobile="left" alignDesktop="left" class="mb-6">
						Webs rápidas, modernas y que venden.
					</Titulo>
					<Parrafo alignMobile="left" alignDesktop="left" class="mb-8">
						Especialistas en **desarrollo web** y **consultoría tecnológica**. Creamos experiencias digitales que impulsan el crecimiento de tu negocio.
					</Parrafo>
					<div class="flex flex-col sm:flex-row gap-4">
						<BotonPrimario href="/precios-y-servicios" icon="lightning">Ver Promoción</BotonPrimario>
						<BotonSecundario href="/proyectos">Ver Proyectos</BotonSecundario>
					</div>
				</div>
				
				<!-- Imagen derecha -->
				<div class="border-radius-large overflow-hidden">
					<Image 
						src={getOptimizedImage("/img/stock/hero-paginas-webs.png")} 
						alt="Hero" 
						width={1200}
						height={500}
						loading="eager"
						class:list={['w-full', 'h-96', 'lg:h-[500px]', 'object-cover']}
					/>
				</div>
			</div>
			</div>
		</div>
	</section>
		<section class="section section-padding">
			<div class="max-w-6xl mx-auto">
				<div class="text-center mb-12">
