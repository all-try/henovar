---
import Layout from './Layout.astro';
import Titulo from '../components/Titulo.astro';
import Parrafo from '../components/Parrafo.astro';
import BotonPrimario from '../components/BotonPrimario.astro';
import BotonSecundario from '../components/BotonSecundario.astro';
import BotonTercio from '../components/BotonTercio.astro';
import '../styles/blog-general.css';
import { blogPosts } from '../data/blogs';

export interface Props {
  title: string;
  description: string;
  author: {
    name: string;
    role: string;
    company: string;
  };
  category: string;
  date: string;
  readTime: string;
  image: string;
  tags: string[];
  cta: {
    text: string;
    action: string;
    service: string;
  };
  slug?: string;
}

const { title, description, author, category, date, readTime, image, tags, cta, slug } = Astro.props;

// Encontrar el blog actual y sus artículos relacionados
const currentBlog = blogPosts.find(blog => blog.slug === slug);
const relatedPosts = currentBlog?.relatedPosts ? 
  blogPosts.filter(blog => currentBlog.relatedPosts?.includes(blog.id)) : [];
---

<Layout title={title} description={description}>
  <main class="min-h-screen bg-white">
    <!-- Blog Banner -->
    <section class="blog-banner">
      <!-- Background Image or Gradient -->
      {image ? (
        <div class="absolute inset-0">
          <img 
            src={image} 
            alt={title}
            class="blog-banner-image"
          />
          <div class="blog-banner-overlay"></div>
        </div>
      ) : (
        <div class="absolute inset-0">
          <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-blue-900 to-indigo-900"></div>
          <div class="blog-banner-pattern">
            <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
              <defs>
                <pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse">
                  <path d="M 10 0 L 0 0 0 10" fill="none" stroke="white" stroke-width="0.5"/>
                </pattern>
              </defs>
              <rect width="100" height="100" fill="url(#grid)" />
            </svg>
          </div>
        </div>
      )}
      
      <!-- Banner Content -->
      <div class="blog-banner-content">
        <div class="blog-banner-inner">
          <div class="blog-banner-container">
            <!-- Category Badge with Chat Icon -->
            <div class="mb-4">
              <span class="blog-banner-badge">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd"></path>
                </svg>
                {category}
              </span>
            </div>
            
            <!-- Title in Banner -->
            <h1 class="blog-banner-title">
              {title}
            </h1>
            
            <!-- Quick Meta in Banner -->
            <div class="blog-banner-meta">
              <span class="blog-banner-meta-item">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                </svg>
                {new Date(date).toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' })}
              </span>
              <span class="blog-banner-meta-item">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                </svg>
                {readTime}
              </span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Article Description Section -->
    <section class="">
      <div class="max-w-6xl mx-auto px-3 lg:px-0 py-8">
        <!-- Description -->
        <div class="">
          <p class="text-xl text-gray-700 leading-relaxed font-light">
            {description}
          </p>
        </div>
      </div>
    </section>

    <!-- Author Info Section -->
    <section class="mb-8 px-4 sm:px-6 lg:px-8">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <!-- Author Card -->
          <div class="bg-gray-50 p-6 rounded-lg">
            <div class="flex items-center space-x-4">
              <div class="bg-gray-100 p-3 rounded-full">
                <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
              <div>
                <p class="text-xl font-bold text-gray-600">{author.name}</p>
                <p class="text-lg text-gray-600">{author.role}</p>
                <p class="text-md text-gray-500">en {author.company}</p>
              </div>
            </div>
          </div>

          <!-- Date & Reading Time Card -->
          <div class="bg-gray-50 p-6 rounded-lg">
            <div class="space-y-3">
              <div class="flex items-center space-x-3">
                <div class="bg-gray-100 p-2 rounded-full">
                  <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <span class="text-xl font-medium text-gray-700">{new Date(date).toLocaleDateString('es-ES', { day: 'numeric', month: 'long', year: 'numeric' })}</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="bg-gray-100 p-2 rounded-full">
                  <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <span class="text-xl font-normal text-gray-600">Tiempo de lectura</span>
                <span class="text-xl font-medium text-gray-600">{readTime}</span>
              </div>
            </div>
          </div>

          <!-- Tags Card -->
          <div class="bg-gray-50 p-6 rounded-lg">
            <div class="flex items-start space-x-3">
              <div class="bg-gray-100 p-2 rounded-full flex-shrink-0">
                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                </svg>
              </div>
              <div class="flex flex-wrap gap-2">
                {tags.map(tag => (
                  <span class="inline-block px-3 py-1.5 text-sm font-semibold bg-blue-100 text-blue-800 rounded-full border border-blue-200 hover:bg-blue-200 transition-colors">{tag}</span>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Separator Line -->
    <div class="border-t border-gray-200"></div>

    <!-- Article Content with Two Column Layout -->
    <article class="bg-white">
      <div class="max-w-6xl mx-auto px-3 lg:px-0 py-12">
        <div class="lg:grid lg:grid-cols-12 lg:gap-8">
          <!-- Table of Contents Sidebar (Desktop Only) -->
          <aside class="hidden lg:block lg:col-span-3 lg:sticky lg:self-start" style="top: 150px;">
            <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
              <!-- Table of Contents -->
              <div>
                <h3 class="text-lg font-semibold text-black mb-4">Contenido</h3>
                <nav id="table-of-contents" class="flex flex-col max-h-[calc(100vh-170px)] overflow-y-auto">
                  <!-- TOC will be populated by JavaScript -->
                </nav>
              </div>
            </div>
          </aside>
          
          <!-- Main Content -->
          <main class="lg:col-span-9">
            <!-- Blog Content -->
            <div class="blog-content prose prose-lg max-w-none">
              <slot />
            </div>
          </main>
        </div>
      </div>
    </article>

    <!-- CTA Section -->
    <section class="py-16 bg-gradient-to-br from-slate-900 via-blue-900 to-indigo-900">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto text-center">
          <Titulo level={2} alignMobile="center" alignDesktop="center" class="mb-4 text-white">
            ¿Listo para implementar estas estrategias?
          </Titulo>
          <Parrafo alignMobile="center" alignDesktop="center" class="mb-8 text-xl text-white">
            {cta.action}
          </Parrafo>
          <BotonTercio mensaje={`Hola! Leí el artículo sobre ${cta.service} y me interesa implementar estas estrategias. ¿Podríamos conversar?`}>
            {cta.text}
          </BotonTercio>
        </div>
      </div>
    </section>

    <!-- Back to Blogs Link -->
    <section class="py-8 bg-white border-t border-gray-200">
      <div class="container mx-auto px-6">
        <div class="max-w-6xl mx-auto">
          <a href="/blog" class="inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors duration-200 font-medium">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Volver a los Blogs
          </a>
        </div>
      </div>
    </section>

    <!-- Related Articles -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-6">
        <div class="max-w-6xl mx-auto">
          <div class="text-left mb-8">
            <h3 class="text-gray-900 leading-widest tracking-tight text-left text-2xl md:text-3xl lg:text-4xl font-semibold mb-4">Artículos Relacionados</h3>
          </div>
          
          {relatedPosts && relatedPosts.length > 0 ? (
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
              {relatedPosts.map(relatedPost => (
                <article class="overflow-hidden">
                  <div class="h-48 mb-4">
                    <img src={relatedPost.image} alt={relatedPost.title} class="w-full h-full object-cover rounded-lg" />
                  </div>
                  <div>
                    <div class="flex flex-col space-y-3">
                      <div class="flex items-center space-x-2">
                        <span class="inline-block px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-md border border-green-200">{relatedPost.category}</span>
                        <p class="text-xs text-gray-500">
                          {new Date(relatedPost.date).toLocaleDateString('es-ES', { day: 'numeric', month: 'short' })} • {relatedPost.readTime}
                        </p>
                      </div>
                      <h4 class="text-gray-900 leading-widest tracking-tight text-left text-xl sm:text-lg md:text-lg lg:text-xl font-semibold mb-2">
                        {relatedPost.title}
                      </h4>
                      <p class="leading-relaxed text-sm sm:text-sm md:text-sm lg:text-sm text-left text-gray-600 mb-4">
                        {relatedPost.excerpt}
                      </p>
                      <div class="flex items-center justify-between mt-auto">
                        <p class="text-left text-sm sm:text-xs leading-relaxed text-gray-500">Por {relatedPost.author.name}</p>
                        <a href={`/blog/${relatedPost.slug}`} class="inline-flex items-center rounded-md text-white bg-gray-800 hover:bg-gray-900 px-4 py-2 font-medium transition-colors text-sm">
                          Leer Más
                          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                          </svg>
                        </a>
                      </div>
                    </div>
                  </div>
                </article>
              ))}
            </div>
          ) : (
            <div class="text-center py-8">
               <p class="text-gray-600 mb-6">No hay artículos relacionados disponibles en este momento.</p>
               <a href="/blog" class="inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 hover:border-gray-400 transition-all duration-200 shadow-sm hover:shadow-md">
                 Ver Todos los Artículos
                 <svg class="ml-2 -mr-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                 </svg>
               </a>
             </div>
          )}
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Scroll margin for headings */
  .blog-content h1,
  .blog-content h2,
  .blog-content h3,
  .blog-content h4 {
    scroll-margin-top: 2rem;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Generate Table of Contents
    const tocContainer = document.getElementById('table-of-contents');
    const headings = document.querySelectorAll('.blog-content h1[data-toc-text], .blog-content h2[data-toc-text], .blog-content h3[data-toc-text]') as NodeListOf<HTMLElement>;
    
    if (tocContainer && headings.length > 0) {
      const tocLinks: Array<{link: HTMLAnchorElement, heading: HTMLElement}> = [];
      
      headings.forEach((heading: HTMLElement, index) => {
        // Create ID for heading if it doesn't have one
        if (!heading.id) {
          const text = heading.textContent?.toLowerCase()
            ?.replace(/[^a-z0-9\s]/g, '')
            ?.replace(/\s+/g, '-')
            ?.trim();
          heading.id = text || `heading-${index}`;
        }
        
        // Get custom TOC text from data attribute
        const tocText = heading.getAttribute('data-toc-text');
        
        // Create TOC link
        const link = document.createElement('a');
        link.href = `#${heading.id}`;
        link.textContent = tocText || heading.textContent || '';
        
        // Apply uniform flat design with same size for all levels
        const baseClasses = 'block py-1.5 px-0 text-gray-600 no-underline text-sm transition-colors duration-200 border-b border-gray-100 last:border-b-0';
        
        if (heading.tagName.toLowerCase() === 'h2') {
          link.className = `${baseClasses} pl-0`;
        } else if (heading.tagName.toLowerCase() === 'h3') {
          link.className = `${baseClasses} pl-8`;
        } else {
          link.className = baseClasses;
        }
        
        link.dataset.target = heading.id;
        
        // Add smooth scroll behavior
        link.addEventListener('click', function(e) {
          e.preventDefault();
          const target = document.getElementById(heading.id);
          if (target) {
            // Remove active from all links
            document.querySelectorAll('.toc-link').forEach(l => l.classList.remove('active'));
            // Add active to clicked link
            link.classList.add('active');
            
            // Calculate position with header offset
            const headerOffset = 140;
            const elementPosition = target.offsetTop;
            const offsetPosition = elementPosition - headerOffset;
            
            window.scrollTo({
              top: offsetPosition,
              behavior: 'smooth'
            });
            
            // Update URL hash
            history.pushState(null, '', `#${heading.id}`);
          }
        });
        
        tocContainer.appendChild(link);
        tocLinks.push({ link, heading });
      });
      
      // Function to update active link based on scroll position
      function updateActiveLink() {
        const headerOffset = 70;
        const scrollPosition = window.scrollY + headerOffset + 50; // Adjust for header
        let activeIndex = -1;
        
        // Find the current section based on scroll position
        for (let i = 0; i < tocLinks.length; i++) {
          const headingTop = tocLinks[i].heading.offsetTop;
          if (scrollPosition >= headingTop) {
            activeIndex = i;
          }
        }
        
        // Remove active class from all links
        tocLinks.forEach(({ link }) => {
          link.classList.remove('text-gray-900', 'font-medium');
          link.classList.add('text-gray-500');
        });
        
        // Add active class to current link with darker gray
        if (activeIndex >= 0) {
          const activeLink = tocLinks[activeIndex].link;
          activeLink.classList.remove('text-gray-500');
          activeLink.classList.add('text-gray-900', 'font-medium');
        }
      }
      
      // Listen to scroll events with throttling
      let scrollTimeout;
      let isScrolling = false;
      
      window.addEventListener('scroll', function() {
        if (!isScrolling) {
          window.requestAnimationFrame(function() {
            updateActiveLink();
            isScrolling = false;
          });
          isScrolling = true;
        }
      });
      
      // Initial call to set active link
      setTimeout(updateActiveLink, 100);
    }
  });
</script>