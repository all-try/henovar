---
export interface Props {
	name: string;
	icon: string;
	description?: string;
	isCard?: boolean;
	isLastCard?: boolean;
}

const { name, icon, description, isCard = false, isLastCard = false } = Astro.props;
---

{isCard ? (
	<div class={`bg-white/5 backdrop-blur-sm rounded-lg p-4 mb-3 ${isLastCard ? 'mb-5' : ''}`}>
		<div class="flex items-start gap-3">
			<div class="flex-shrink-0 mt-0.5">
				<svg class="w-5 h-5 text-blue-400" fill="currentColor" viewBox="0 0 24 24" set:html={icon}></svg>
			</div>
			<div class="flex-1 mb-0">
				<h4 class="text-white font-medium text-sm mb-1">{name}</h4>
				{description && (
					<p class="text-slate-400 text-xs leading-relaxed">{description}</p>
				)}
			</div>
		</div>
	</div>
) : (
	<div class="flex items-center gap-3 mb-3">
		<svg class="w-5 h-5 text-blue-400 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24" set:html={icon}></svg>
		<span class="text-slate-300 text-sm">{name}</span>
	</div>
)}