---
import Titulo from './Titulo.astro';
import Parrafo from './Parrafo.astro';
import Badge from './Badge.astro';
import OptimizedImage from './OptimizedImage.astro';
import { getOptimizedImage } from '../utils/imageMap';
import type { ImageMetadata } from 'astro';

// Imagen por defecto
import bannerDefault from '../assets/images/bg/banner.webp';

interface Props {
	titulo: string;
	parrafo: string;
	badge: string;
	highlight?: string;
	imagenFondo?: ImageMetadata;
}

const { titulo, parrafo, badge, highlight, imagenFondo } = Astro.props;
const bannerImage = imagenFondo || bannerDefault;
---


	<!-- Hero Section -->
	<section class="pb-0 px-3 lg:px-7 pt-25 lg:pt-0">
		<div class="relative pb-7 lg:pb-20 pt-7 lg:pt-35 px-5 lg:px-5 max-w-7xl rounded-2xl lg:rounded-t-none mx-auto overflow-hidden">
			<!-- Background Image -->
			<div class="absolute inset-0">
				<OptimizedImage 
					src={bannerImage}
					alt="Banner background"
					class="w-full h-full object-cover"
					loading="eager"
				/>
			</div>
			<!-- Content -->
			<div class="relative z-10 w-full">
				<div class="max-w-6xl mx-auto">
					<Badge variant="secondary" class="mb-5">{badge}</Badge>
					<Titulo level={1} highlight={highlight} alignMobile="left" alignDesktop="left" class="mb-6 max-w-4xl">
						{titulo}
					</Titulo>
					<Parrafo alignMobile="left" alignDesktop="left" class="max-w-3xl">
						{parrafo}
					</Parrafo>
				</div>
			</div>
		</div>
	</section>


<style>
