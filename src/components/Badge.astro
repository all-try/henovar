  <div class={`inline-flex items-center rounded-full text-xs sm:text-sm font-light tracking-wide backdrop-blur-md glass-badge-primary px-3 py-1.5 sm:px-4 sm:py-2 lg:px-5 lg:py-2.5 ${className}`}>
    {icon && (
      <svg 
        class="w-3 h-3 sm:w-4 sm:h-4 text-blue-300 mr-2" 
        fill="currentColor" 
        viewBox="0 0 50 50" 
        xmlns="http://www.w3.org/2000/svg"
