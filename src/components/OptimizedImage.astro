---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

export interface Props {
  src: string | ImageMetadata;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  id?: string;
  loading?: 'lazy' | 'eager';
  quality?: number;
  format?: 'webp' | 'avif' | 'png' | 'jpg';
}

const {
  src,
  alt,
  width,
  height,
  class: className = '',
  id,
  loading = 'lazy',
  quality = 80,
  format = 'webp'
} = Astro.props;

// Handle both string and ImageMetadata types
const isImageMetadata = typeof src === 'object' && src !== null;
const imageWidth = width || (isImageMetadata ? src.width : undefined);
const imageHeight = height || (isImageMetadata ? src.height : undefined);
---

{isImageMetadata ? (
  <Image
    src={src}
    alt={alt}
    width={imageWidth}
    height={imageHeight}
    loading={loading}
    quality={quality}
    format={format}
    class={className}
    id={id}
  />
) : (
  <img
    src={src}
    alt={alt}
    width={imageWidth}
    height={imageHeight}
    loading={loading}
    class={className}
    id={id}
  />
)}