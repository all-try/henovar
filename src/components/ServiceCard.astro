---
export interface Props {
	tag?: string;
	tagStyle?: string;
	headerBackground: string;
	cardBackground: string;
	icon: string;
	border?: boolean;
	price: string;
	priceLabel?: string;
	previousPrice?: string;
	title: string;
	description: string;
	href?: string;
	dataService?: string;
	showPriceNote?: boolean;
}

const {
	tag,
	tagStyle = "bg-gradient-to-r from-red-500 to-red-800 text-white px-4 py-2 rounded-full text-sm font-bold shadow-lg",
	headerBackground,
	cardBackground,
	icon,
	border = false,
	price,
	priceLabel,
	previousPrice,
	title,
	description,
	href = "/contacto",
	dataService,
	showPriceNote = false
} = Astro.props;

import BotonTercio from './BotonTercio.astro';
---

<div class={`flex-1 relative bg-slate-900 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 group ${border ? 'ring-2 ring-blue-300' : 'ring-1 ring-white/15'}`} data-service={dataService}>
	{tag && (
		<div class="absolute -top-6 left-1/2 transform -translate-x-1/2 z-20">
			<div class={tagStyle}>
				{tag}
			</div>
		</div>
	)}
	<div class="relative h-full flex flex-col overflow-hidden rounded-2xl">
		<!-- Encabezado con fondo -->
		<div class="bg-cover bg-no-repeat bg-top p-6 pt-8" style={`background-image: url('${headerBackground}')`}>
			<div class="flex items-center gap-3 mb-3">
				<svg class="w-8 h-8 text-blue-400" fill="currentColor" viewBox="0 0 24 24">
					<path d={icon}/>
				</svg>
				<h3 class="text-2xl font-semibold text-white">{title}</h3>
			</div>
			<div class="mb-4">
				<div class="mb-2 overflow-hidden">
					<span class="text-6xl text-white font-semibold break-words" data-price="main" set:html={price}></span>
			</div>
				<div class="flex flex-col gap-1">
					{priceLabel && (
						<span class="text-slate-400 text-sm font-medium mb-2">{priceLabel}</span>
					)}
					{previousPrice && (
						<span class="text-slate-500 text-sm break-words" set:html={previousPrice}></span>
					)}
				</div>
			</div>
			<p class="text-slate-300 text-base leading-relaxed mb-6">
				{description}
			</p>
			<BotonTercio mensaje="Hola! Me interesa el servicio de {title}. ¿Podríamos hablar sobre mi proyecto?" class="w-full">
				Comenzar Proyecto
			</BotonTercio>
			{showPriceNote && (
				<p class="text-slate-400 text-xs mt-3 text-center">
					Precio base, puede variar según la complejidad.
				</p>
			)}
		</div>

		<!-- Características -->
		<div class="p-6 flex-1 bg-cover bg-no-repeat bg-top bg-black/70 bg-blend-overlay" style={`background-image: url('${cardBackground}')`}>
			<h4 class="text-slate-400 font-medium text-sm mb-4 uppercase tracking-wide">CARACTERÍSTICAS</h4>
			
			<div class="space-y-3">
				<slot name="features" />
			</div>

			<!-- Lo que incluye -->
			<slot name="includes" />
		</div>
	</div>
</div>