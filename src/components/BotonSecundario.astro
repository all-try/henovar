---
export interface Props {
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  class?: string;
  target?: '_blank' | '_self' | '_parent' | '_top';
  id?: string;
  style?: string;
}

const { href, type = 'button', disabled = false, class: className = '', target = '_self', id, style } = Astro.props;
const Element = href ? 'a' : 'button';
---

<Element
  href={href}
  type={!href ? type : undefined}
  disabled={!href ? disabled : undefined}
  target={href ? target : undefined}
  class={`btn-secondary ${className}`}
  id={id}
  style={style}
>
  <slot />
</Element>

<style>
  .btn-secondary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 600;
    background-color: transparent;
    color: white;
    border: 2px solid #4b5563;
    border-radius: 0.375rem;
    cursor: pointer;
    text-decoration: none;
  }

  .btn-secondary:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  /* Responsive styles */
  @media (min-width: 768px) {
    .btn-secondary {
      padding: 1rem 2rem;
      font-size: 1.125rem;
    }
  }
</style>