---
export interface Props {
  title: string;
  description: string;
  year: string;
  image: string;
  link?: string;
  class?: string;
}

const { title, description, year, image, link = "#", class: className = "" } = Astro.props;
---

<div class={`project-card ${className}`}>
    <div class="project-image" style={`background-image: url(${image})`}>
    <div class="project-overlay"></div>
    <span class="project-year-corner">{year}</span>
    <div class="project-info">
      <div class="project-content">
        <h3 class="project-title">{title}</h3>
        <p class="project-description">{description}</p>
        <a href={link} class="project-button">
          Ver Detalles
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .project-card {
    position: relative;
    border-radius: 1rem;
    overflow: hidden;
    height: 400px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .project-image {
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: top;
    position: relative;
    display: flex;
    align-items: flex-end;
    padding: .5rem;
  }

  .project-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.1) 0%,
      rgba(0, 0, 0, 0.3) 50%,
      rgba(0, 0, 0, 0.8) 100%
    );
    z-index: 1;
  }

  .project-year-corner {
    position: absolute;
    top: 1rem;
    right: 1rem;
    z-index: 3;
    font-size: 0.75rem;
    font-weight: 600;
    color: white;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(10px);
    padding: 0.25rem 0.5rem;
    border-radius: 0.375rem;
  }

  .project-info {
    position: relative;
    z-index: 2;
    width: 100%;
  }

  .project-content {
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(10px);
    border-radius: 0.75rem;
    padding: 0.875rem;
  }

  .project-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: white;
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
  }

  .project-description {
    font-size: 0.875rem;
    color: #d1d5db;
    margin: 0 0 0.75rem 0;
    line-height: 1.4;
  }

  .project-button {
    display: inline-flex;
    align-items: center;
    font-size: 0.875rem;
    font-weight: 400;
    color: rgb(182, 182, 182);
    background: rgba(0, 0, 0, 0.2);
    outline: 1px solid transparent;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: background-color 0.2s ease, outline 0.2s ease;
  }

  .project-button:hover {
    background: rgba(0, 0, 0, 0.6);
    outline: 1px solid rgba(255, 255, 255, 0.2);
  }

  .project-button svg {
    transition: transform 0.2s ease;
  }

  .project-button:hover svg {
    transform: translateX(2px);
  }

  @media (max-width: 768px) {
    .project-card {
      height: 350px;
    }

    .project-image {
      padding: 1rem;
    }

    .project-info {
      width: 100%;
    }

    .project-content {
      padding: 0.75rem;
    }

    .project-year-corner {
      top: 0.75rem;
      right: 0.75rem;
    }

    .project-title {
      font-size: 1.125rem;
    }

    .project-description {
      font-size: 0.8rem;
    }

    .project-button {
      font-size: 0.8rem;
      padding: 0.4rem 0.8rem;
    }
  }
</style>