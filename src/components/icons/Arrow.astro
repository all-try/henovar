---
export interface Props {
  class?: string;
  size?: string;
  direction?: 'right' | 'left' | 'up' | 'down';
}

const { class: className = '', size = '20', direction = 'right' } = Astro.props;

const rotationMap = {
  right: '0',
  down: '90',
  left: '180',
  up: '270'
};

const rotation = rotationMap[direction];
---

<svg
  class={className}
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="currentColor"
  xmlns="http://www.w3.org/2000/svg"
  style={`transform: rotate(${rotation}deg)`}
>
